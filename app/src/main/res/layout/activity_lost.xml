<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
     tools:context="arias.pablo.empezando.lay.lostActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewPerritoEncontrado"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Perdido"
                android:textSize="30sp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="50sp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewPerritoEncontrado"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="0sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fecha" />

                    <DatePicker
                        android:id="@+id/datePickerPerdido"
                        android:layout_width="56sp"
                        android:layout_height="50sp"
                        android:layout_marginLeft="5sp"
                        android:datePickerMode="spinner"
                        android:background="#f00"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewUbication"
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ubicacion" />

                    <Spinner
                        android:id="@+id/spinnerUbication"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewTamaño"
                android:layout_width="63sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tamaño"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTamaño"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="tamaño"
                android:inputType="textPersonName" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewGenero"
                android:layout_width="63sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Género"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextGenero"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="género" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewRaza"
                android:layout_width="63sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Raza"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextRaza"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="raza"
                android:inputType="textPersonName" />


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_weight="1"
                android:text="Descripción" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/quoteTextAreaDescription"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:ems="10"
                android:enabled="true"
                android:focusable="true"
                android:gravity="top"
                android:hint="Type your quote here"
                android:inputType="textMultiLine"
                android:isScrollContainer="true"
                android:maxLines="2"
                android:minLines="1"
                android:padding="24dp"
                android:textIsSelectable="true" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewReferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Referencias" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/ReferenceQuoteTextArea"
                android:enabled="true"
                android:minLines="1"
                android:maxLines="2"
                android:isScrollContainer="true"
                android:hint="Type your quote here"
                android:background="#fafafa"
                android:textIsSelectable="true"
                android:focusable="true"
                android:gravity="top"
                android:padding="24dp"
                style="@style/Base.TextAppearance.AppCompat.Large"
                />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
